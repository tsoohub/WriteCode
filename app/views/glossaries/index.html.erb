<%= render 'shared/header_lesson' %>

<div class="container" style="margin-top: 40px;">
	<div class="row">
		<div class="col-xs-3 col-sm-3 col-md-3" id="glossary_header">
			<h4>Тайлбар толь</h4>
			<nav class="navbar navbar-default" role="navigation" id="navbar_glossary">
				<div class="navbar-header fixed_of">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#glossaryCollapse" aria-expanded="false">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			    </div>
	            <div class="collapse navbar-collapse fixed_of"  id="glossaryCollapse">
	            	<ul>
	                <% @glossary.each do |g| %>
	                    <li><a href="#<%= g.id %>" class="btn btn-default"><%= g.name %></a></li>
	                <% end %>
	                </ul>
	            </div>
	        </nav>
		</div>
		<div class="col-xs-9 col-sm-9 col-md-9">
			<div class="tab-content" id="glossary_width">
				<% @glossary.each do |g| %>
                <div role="tabpanel" class="tab-pane fade in active manage_gloss" id="<%= g.id %>">
                    <h3><%= g.name %></h3>
                    <p><%= g.description %></p>
                    <div id="gloss_code">
                    	<p>Бичиглэл</p>
	                    <pre><code class="language-html" data-lang="html"><%= g.syntax %></code></pre>
	                    <hr class="gloss_hr" />
	                    <p>Жишээ</p>
	                    <pre><code class="language-html" data-lang="html"><%= g.example %></code></pre>
                    </div>
                </div>
                <% end %>
            </div>
		</div>
	</div>
</div>